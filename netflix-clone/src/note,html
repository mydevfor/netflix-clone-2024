{SELECT * FROM Products 
JOIN ProductDescription 
JOIN ProductPrice ON Products.product_id = ProductDescription.product_id AND Products.product_id = ProductPrice.product_id  }

{SELECT * FROM Products 
JOIN ProductDescription 
JOIN ProductPrice ON Products.product_id = ProductDescription.product_id AND Products.product_id = ProductPrice.product_id   WHERE products.product_name = 'iphone se'}
    
